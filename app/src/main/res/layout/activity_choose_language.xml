<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".ChooseLanguage">

    <LinearLayout
        android:id="@+id/welcomeLinear"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@color/colorPrimary"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="مرحبا"
            android:textColor="#FFFFFF"
            android:textSize="24sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="Welcome"
            android:textColor="#FFFFFF"
            android:textSize="24sp" />
    </LinearLayout>

    <ImageView
        android:id="@+id/chooseLangPoster"
        android:layout_width="120dp"
        android:layout_height="140dp"
        android:layout_below="@id/welcomeLinear"
        android:layout_centerHorizontal="true"
        android:src="@drawable/chooselanguageposter" />

    <TextView
        android:id="@+id/txtPrefLangAr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/chooseLangPoster"
        android:layout_centerHorizontal="true"
        android:text="@string/preferred_lang_ar"
        android:textColor="@color/colorPrimary"
        android:textSize="22sp" />

    <TextView
        android:id="@+id/txtPrefLangen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtPrefLangAr"
        android:layout_centerHorizontal="true"
        android:text="@string/what_is_your_preferred_language"
        android:textColor="@color/colorPrimary"
        android:textSize="22sp" />


    <RelativeLayout
        android:id="@+id/btnArLang"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_below="@id/txtPrefLangen"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:background="@drawable/choose_lang_unchecked">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="العربية"
            android:textColor="#FFFFFF"
            android:textSize="24sp" />

        <ImageView
            android:id="@+id/imgArLang"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="10dp"
            android:src="@drawable/check"
            android:visibility="invisible" />


    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/btnEnLang"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_below="@id/btnArLang"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:background="@drawable/choose_lang_unchecked">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="English"
            android:textColor="#FFFFFF"
            android:textSize="24sp" />

        <ImageView
            android:id="@+id/imgEnLang"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="10dp"
            android:src="@drawable/check"
            android:visibility="invisible" />

    </RelativeLayout>


    <Button
        android:id="@+id/btnSubmitLang"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_centerHorizontal="true"
        android:background="#16c0d8"
        android:text="متابعة"
        android:textColor="#FFFFFF"
        android:textSize="23sp" />

</RelativeLayout>